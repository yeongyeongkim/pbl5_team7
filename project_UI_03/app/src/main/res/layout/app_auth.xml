<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/authList_appIcon"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/authList_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:layout_margin="5dp"
            android:textSize="24dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="18.5"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="24dp"
                android:text="Permission Granted:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/req_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/features"
                android:paddingLeft="24dp" />

            <TextView
                android:id="@+id/permissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/req_feature"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:text="Required Permissions: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/req_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/permissions"
                android:paddingLeft="24dp" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>